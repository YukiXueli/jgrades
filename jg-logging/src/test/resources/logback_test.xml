<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <appender class="ch.qos.logback.classic.sift.SiftingAppender" name="sift_info">
    <discriminator>
      <key>logging_configuration</key>
      <defaultValue>external-lib</defaultValue>
    </discriminator>
    <sift>
      <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="RollingFileAppender-${logging_configuration}">
        <file>${jg.logs.dir}/jgrades_${logging_configuration}_module.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>${jg.logs.dir}/jgrades_${logging_configuration}_module_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
          <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>2147483647MB</MaxFileSize>
          </triggeringPolicy>
          <triggeringPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <MaxBackupIndex>2147483647</MaxBackupIndex>
          </triggeringPolicy>
        </rollingPolicy>
        <encoder>
          <charset>UTF-8</charset>
          <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level --&gt; %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
          <level>INFO</level>
          <onMatch>ACCEPT</onMatch>
          <onMismatch>DENY</onMismatch>
        </filter>
      </appender>
    </sift>
  </appender>
  <appender class="ch.qos.logback.classic.sift.SiftingAppender" name="sift_error">
    <discriminator>
      <key>logging_configuration</key>
      <defaultValue>external-lib</defaultValue>
    </discriminator>
    <sift>
      <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="RollingFileAppender-${logging_configuration}">
        <file>jgrades_${logging_configuration}_module.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>jgrades_${logging_configuration}_module_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
          <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>2147483647MB</MaxFileSize>
          </triggeringPolicy>
          <triggeringPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <MaxBackupIndex>2147483647</MaxBackupIndex>
          </triggeringPolicy>
        </rollingPolicy>
        <encoder>
          <charset>UTF-8</charset>
          <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level --&gt; %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
          <level>ERROR</level>
          <onMatch>ACCEPT</onMatch>
          <onMismatch>DENY</onMismatch>
        </filter>
      </appender>
    </sift>
  </appender>
  <appender class="ch.qos.logback.classic.sift.SiftingAppender" name="sift_trace">
    <discriminator>
      <key>logging_configuration</key>
      <defaultValue>external-lib</defaultValue>
    </discriminator>
    <sift>
      <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="RollingFileAppender-${logging_configuration}">
        <file>jgrades_${logging_configuration}_module.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>jgrades_${logging_configuration}_module_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
          <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>2147483647MB</MaxFileSize>
          </triggeringPolicy>
          <triggeringPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <MaxBackupIndex>2147483647</MaxBackupIndex>
          </triggeringPolicy>
        </rollingPolicy>
        <encoder>
          <charset>UTF-8</charset>
          <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level --&gt; %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
          <level>TRACE</level>
          <onMatch>ACCEPT</onMatch>
          <onMismatch>DENY</onMismatch>
        </filter>
      </appender>
    </sift>
  </appender>
  <root level="INFO">
    <appender-ref ref="sift_info" />
  </root>
  <root level="ERROR">
    <appender-ref ref="sift_error" />
  </root>
  <root level="TRACE">
    <appender-ref ref="sift_trace" />
  </root>
</configuration>
