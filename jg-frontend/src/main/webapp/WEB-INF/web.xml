<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="WebApp_ID"
         version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>QuickTickets Dashboard</display-name>

    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>${productionMode}</param-value>
    </context-param>
    <servlet>
        <servlet-name>QuickTicketsDashboard</servlet-name>
        <servlet-class>org.jgrades.frontend.vaadin.DashboardServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>org.jgrades.frontend.vaadin.DashboardUI</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuickTicketsDashboard</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>
